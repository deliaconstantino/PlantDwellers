<h1><%= @home.nickname %></h1>

<h3>Welcome home, <%= @dweller.name.humanize %>.</h3>

<br>

<h2>Your home&#39;s plants are: </h2>
<table>
  <tr>
    <th>Common Name</th>
    <th>Scientific Name</th>
    <th>Category</th>
    <th>Size</th>
  </tr>
  <tr>
    <% @home.plants.uniq.each do |plant| %>
      <td><%= plant.common_name %></td>
      <td><%= plant.scientific_name %></td>
      <td><%= plant.category %></td>
      <td><%= plant.size %></td>
    </tr>
    <% end %>
  </table>

<br>
<h3>Add <a href="/plants/new">plants</a>?</h3>

<br>

<% if !@home.plants.empty? %>
  <h2>Plant Care Schedule</h2>
    <table>
      <tr>
        <th>Name</th>
        <th>Watering Schedule</th>
        <th>Rotation Schedule</th>
        <th>Fertilization Schedule</th>
        <th>Location</th>
      </tr>
      <tr>
        <% @home.plants.each do |plant| %>
          <td><%= plant.common_name %></td>
          <% water = plant.watering_schedule.split("\"") %>
          <td><%= water[3] %> time(s) per <%= water[7] %></td>
          <% rotation = plant.rotation_schedule.split("\"") %>
          <td><%= rotation[3] %> time(s) per <%= rotation[7] %></td>
          <% fertilize = plant.fertilization_schedule.split("\"") %>
          <td><%= fertilize[3] %> time(s) per <%= fertilize[7] %></td>
          <td><%= plant.location %></td>
        </tr>
        <% end %>
    </table>
<% end %>
<br>

<% if @home.dwellers.count > 1 %>
  <h3>You share this home with: </h3>
  <ul>
    <% @home.dwellers.each do |dweller| %>
      <% if dweller != @dweller %>
        <li><%= dweller.name.humanize %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
